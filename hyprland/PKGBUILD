arch=('any')
license=('GPL')
depends=('hyprland' 'waybar' 'rofi-wayland' 'sakura' 'swaybg' 'swayidle' 'gtklock' 'polkit-gnome' 'qt5-wayland' 'qt6-wayland' 'xdg-desktop-portal-hyprland' 'mako' 'wofi' 'swaylock')
package() {
    install -d $pkgdir/etc
    install -d $pkgdir/usr
    cp -rf "$startdir/etc"/* "$pkgdir/etc/"
    
}
